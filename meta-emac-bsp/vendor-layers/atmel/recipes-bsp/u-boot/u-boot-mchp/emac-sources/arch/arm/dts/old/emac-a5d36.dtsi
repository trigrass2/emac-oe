#include "sama5d36.dtsi"


/ {
	compatible = "emac,soma5d36", "atmel,sama5d3", "atmel,sama5";
	
	chosen {
		u-boot,dm-pre-reloc;
		stdout-path = &dbgu;
	};

	aliases {
		spi0 = &spi0;
	};

	memory {
		reg = <0x20000000 0x20000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};

		audio_mclk: audio_mclk {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <12288000>;
			clock-output-names = "mclk";
		};
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		vref: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "vref";
			regulator-min-microvolt = <2500000>;
			regulator-max-microvolt = <2500000>;
			regulator-always-on;
			gpio = <&pioB 25 GPIO_ACTIVE_HIGH>;
		};

		reg_3p3v: regulator@1 {
			compatible = "regulator-fixed";
			reg = <1>;
			regulator-name = "reg_3p3v";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};

		lvds_3p3v: lvds_3p3v_reg {
			compatible = "regulator-fixed";
			reg = <3>;
			regulator-name = "LVDS 3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-boot-on;
			enable-active-high;
			gpio = <&pioC 25 GPIO_ACTIVE_LOW>;
		};
	};

	ahb {
		apb {
			pinctrl@fffff200 {
				pck0 {
					pinctrl_pck0: pck0_as_clk_mck {
						atmel,pins =
							<AT91_PIOD 30 AT91_PERIPH_B AT91_PINCTRL_NONE>;
					};
				};

				usba {
					pinctrl_usba_vbus: usba_vbus {
						atmel,pins =
							<AT91_PIOC 27 AT91_PERIPH_GPIO AT91_PINCTRL_DEGLITCH>;
					};
				};

				ssc0 {
					pinctrl_ssc0_txrx: ssc0_txrx {
						atmel,pins =
							<AT91_PIOC 16 AT91_PERIPH_A AT91_PINCTRL_NONE	/* PC16 periph A TK0 */
							 AT91_PIOC 17 AT91_PERIPH_A AT91_PINCTRL_NONE	/* PC17 periph A TF0 */
							 AT91_PIOC 18 AT91_PERIPH_A AT91_PINCTRL_NONE	/* PC18 periph A TD0 */
							 AT91_PIOC 20 AT91_PERIPH_A AT91_PINCTRL_NONE	/* PC20 periph A RF0 */
							 AT91_PIOC 21 AT91_PERIPH_A AT91_PINCTRL_NONE>;	/* PC21 periph A RD0 */
					};
				};

				mmc1 {
					pinctrl_mmc1_cd_wp: mmc1_cd_wp {
						atmel,pins =
							<AT91_PIOC 5 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH
							 AT91_PIOC 13 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH
							 AT91_PIOC 14 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH>;
					};
				};
				
				led {
					pinctrl_led: led-board {
						atmel,pins =
							<AT91_PIOE 22 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>;
					};
				};
			};

			pmc: pmc@fffffc00 {
				periphck {
					usart1_clk: usart1_clk@13 {
						u-boot,dm-pre-reloc;
					};
				};
			};

			can1: can@f8010000 {
				status = "okay";
			};
			
			hlcdc: hlcdc@f0030000 {
				atmel,vl-bpix = <4>;
				atmel,output-mode = <24>;
				atmel,guard-time = <1>;
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_lcd_base &pinctrl_lcd_pwm &pinctrl_lcd_rgb888>;
				status = "okay";
				u-boot,dm-pre-reloc;

				display-timings {
					u-boot,dm-pre-reloc;
					480x272 {
						clock-frequency = <24000000>;
						hactive = <480>;
						vactive = <272>;
						hsync-len = <45>;
						hfront-porch = <64>;
						hback-porch = <64>;
						vfront-porch = <22>;
						vback-porch = <21>;
						vsync-len = <1>;
						u-boot,dm-pre-reloc;
					};
				};
			};

			mmc0: mmc@f0000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_mmc0_clk_cmd_dat0 &pinctrl_mmc0_dat1_3>;
				status = "okay";
				u-boot,dm-pre-reloc;
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					non-removable;
				};
			};
			mmc1: mmc@f8000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_mmc1_clk_cmd_dat0 &pinctrl_mmc1_dat1_3 &pinctrl_mmc1_cd_wp>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};

			usart0: serial@f001c000 {
				dmas = <0>, <0>;	/*  Do not use DMA for usart0 */
				status = "okay";
			};

			usart1: serial@f0020000 {
				dmas = <0>, <0>;	/*  Do not use DMA for usart1 */
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_usart1 &pinctrl_usart1_rts_cts>;
				status = "okay";
				u-boot,dm-pre-reloc;
			};

			usart2: serial@f8020000 {
				dmas = <0>, <0>;	/*  Do not use DMA for usart1 */
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_usart2 &pinctrl_usart2_rts_cts>;
				status = "okay";
			};

			dbgu: serial@ffffee00 {
				dmas = <0>, <0>;	/*  Do not use DMA for dbgu */
				status = "okay";
				u-boot,dm-pre-reloc;
			};

			ssc0: ssc@f0008000 {
				#sound-dai-cells = <0>;
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_ssc0_txrx>;
				status = "okay";
			};

			spi0: spi@f0004000 {
				dmas = <0>, <0>;	/*  Do not use DMA for spi0 */
				u-boot,dm-pre-reloc;
				cs-gpios = <&pioD 13 0>, <0>, <0>, <0>;
				status = "okay";
				spi_flash@0 {
					compatible = "jedec,spi-nor";
					spi-max-frequency = <50000000>;
					reg = <0>;
					u-boot,dm-pre-reloc;
				};
			};

			i2c0: i2c@f0014000 {
				status = "okay";
			};

			adc0: adc@f8018000 {
				pinctrl-names = "default";
				pinctrl-0 = <
					&pinctrl_adc0_ad0
					&pinctrl_adc0_ad1
					&pinctrl_adc0_ad2
					&pinctrl_adc0_ad3
					&pinctrl_adc0_ad4
					&pinctrl_adc0_ad5
					&pinctrl_adc0_ad6
					&pinctrl_adc0_ad7
					>;

				atmel,adc-vref = <2500>;
				atmel,adc-channels-used = <0xff>;
				atmel,adc-ts-wires = <4>;
				atmel,adc-ts-pressure-threshold = <10000>;
				status = "okay";
			};

			macb0: ethernet@f0028000 {
				status = "okay";
				phy-handle = <&phy0>;
				
				#address-cells = <1>;
				#size-cells = <0>;

				phy0: ethernet-phy@1 {
					reg = <0x1>;
					interrupt-parent = <&pioD>;
					interrupts = <19 IRQ_TYPE_EDGE_FALLING>;
					txen-skew-ps = <800>;
					txc-skew-ps = <3000>;
					rxdv-skew-ps = <400>;
					rxc-skew-ps = <3000>;
					rxd0-skew-ps = <400>;
					rxd1-skew-ps = <400>;
					rxd2-skew-ps = <400>;
					rxd3-skew-ps = <400>;
				};
			};
		};

		usb0: gadget@00500000 {
			atmel,vbus-gpio = <&pioC 27 GPIO_ACTIVE_HIGH>;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_usba_vbus>;
			status = "okay";
		};

		usb1: ohci@00600000 {
			num-ports = <3>;
			status = "okay";
		};

		usb2: ehci@00700000 {
			status = "okay";
		};
	};
	
	watchdog {
		/* MAX6747 */
		compatible = "linux,wdt-gpio";
		gpios = <&pioD 6 GPIO_ACTIVE_LOW>;
		hw_algo = "toggle";
		hw_margin_ms = <1000>;
	};

	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_led>;
		status {
			label = "status";
			gpios = <&pioE 22 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};
};
